<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_tablet"
    android:tag="tablet"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:baselineAligned="false"

    tools:context="com.example.akhilraja.bakingapp.Activities.MainActivity">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/DetailContainer"
        android:layout_weight="1"
        android:name="com.example.akhilraja.bakingapp.Activities.DetailFragment" />

    <View android:background="#000000"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/DetailContainerFragment"
        android:layout_width="3000dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />


</LinearLayout>
